@model IEnumerable<DataLayerDB.DataBaseScaffold.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm("Index", "Orders", FormMethod.Get))
{
  <label for="orderDateStart">From:</label>
  <input type="datetime-local" id="startDate" name="startDate" value=""/>
  <label for="orderDateEnd">End:</label>
  <input type="datetime-local" id="endDate" name="endDate" value=""/>
  <input type="submit"/>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MemberId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequireDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Freight)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MemberId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Freight)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |

                <a href="@Url.Action("Index", "OrderDetails", new{
                    OrderID = @item.OrderId
                })">Details</a> |
                
                <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>
